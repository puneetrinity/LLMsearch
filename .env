# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# External API Keys (get these from respective providers)
BRAVE_SEARCH_API_KEY=your_brave_api_key_here
BING_SEARCH_API_KEY=your_bing_api_key_here
BING_AUTOSUGGEST_API_KEY=your_bing_autosuggest_key_here
ZENROWS_API_KEY=your_zenrows_api_key_here

# LLM Configuration
OLLAMA_HOST=http://localhost:11434
LLM_MODEL=llama2:7b
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=30

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_QUERY_ENHANCEMENT=3600
CACHE_TTL_SEARCH_RESULTS=1800
CACHE_TTL_FINAL_RESPONSE=14400
MEMORY_CACHE_SIZE=1000

# Database (optional - for production logging)
DATABASE_URL=postgresql://user:password@localhost:5432/searchdb

# Security
ALLOWED_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# Cost Controls
DAILY_BUDGET_USD=50.0
MAX_SOURCES_PER_QUERY=8
MAX_CONCURRENT_REQUESTS=100
ZENROWS_MONTHLY_BUDGET=200.0

# Performance Settings
REQUEST_TIMEOUT=30
SEARCH_TIMEOUT=10
CONTENT_FETCH_TIMEOUT=15
MAX_SEARCH_RESULTS=10
MAX_CONTENT_LENGTH=5000

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=60
